

<style>
  body {
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    text-align: center;
    background-color: pink;
    background-position: center;
    
    background-size: cover;
  }

  
  
  .signup-container{
    background-color:grey;
     
  
    border-radius: 10px;
    box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);
    padding: 15px;
    width: 300px;
    position: relative;
  }
  .field{
    display: flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(to bottom, #b76aff, #9865e0);
    box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.5);
  }
  
/* Style labels */
  .field label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f9f9f9;
  }

/* Style input fields */
   input[type="text"],
   input[type="email"]
   input[type="password"]
   input[type="gender"]{
    width: 200px;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    
  }

/* Style submit button */
  input[type="submit"] {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  input[type="submit"]:hover {
    background-color: #0056b3;
  }
</style>
<div class="signup-container">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %><br />
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
    </div>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :gender %>
      <%= f.select :gender, ['Male', 'Female', 'Other'] %>
    </div>

    <div class="field">
      <%= f.label :dob %>
      <%= f.date_field :dob %>
    </div>

    <div class="field">
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>

    <div class="action">
      <%= f.submit "Sign up" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
