<style>
    body {
        padding: 10px;
        background: #B6B6B4;
        align-items: center;
    }
    .back {
        position: relative;
        height: 30px;
        width: 90px;
        background-color: transparent;
        color: #fff;
        border: none;
        outline: 1px solid #fff;
        text-transform: capitalize;
        border-radius: 4px;
        transition: 1s ease;
        text-align: center;
    
    }
    .back:hover {
        background-color: #fff;
        color: #000;
        font-weight: bolder;
    }
    
    .new{
        max-width: 1500px;
        margin: 20px auto;
        background-color: grey;
        box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 5px;
        text-align: center;
    
    }
    .form{
    
        flex-wrap: wrap;
        background-color: pink;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 1);
        padding: 10px;
        
    }
    
</style>

<div class="new">
    <h1 style="color: blue;text-align:center;font-size:60px">New Blog Post</h1>
    <div class="form">
        <%= render 'form' %>
    </div>
    <div class="back">
        <%= link_to 'Back', blog_posts_path %>
    </div>    
</div>    