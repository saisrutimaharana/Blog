<p>
  <strong>Title:</strong>
  <%= @blog_post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @blog_post.description %>
</p>

<% if @blog_post.image.present? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @blog_post.image.url %>
  </p>
<% end %>

<% if @blog_post.video.present? %>
  <p>
    <strong>Video:</strong>
    <%= video_tag @blog_post.video.url %>
  </p>
<% end %>

<%= button_to 'Delete', blog_post_path(@blog_post), method: :delete, data: { confirm: 'Are you sure you want to log out?' } %> |
<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<%= link_to 'Back', blog_posts_path %>